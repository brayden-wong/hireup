{
  "name": "@hireup/api",
  "version": "1.0.50",
  "scripts": {
    "dev": "NODE_ENV=development bun run --watch src/server.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "start:cloud": "bun run db:push && bun run db:studio",
    "start:local": "sh start-database.sh && sleep 1 && bun run db:push && bun run db:studio",
    "build": "bun run ./build.ts",
    "start": "NODE_ENV=production bun run ./dist/server.js"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.2.0",
    "@hireup/common": "workspace:*",
    "@paralleldrive/cuid2": "^2.2.2",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.0",
    "elysia": "latest",
    "ioredis": "^5.5.0",
    "obscenity": "^0.4.3",
    "postgres": "^3.4.5",
    "posthog-node": "^4.7.0",
    "superjson": "^2.2.2",
    "uuid": "^11.0.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.6",
    "bun-types": "latest",
    "drizzle-kit": "0.30.0"
  },
  "module": "src/index.js"
}
